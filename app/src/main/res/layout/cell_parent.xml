<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nomParent"
        android:layout_width="362dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:text="@string/nomParent"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrrowButton"
        android:layout_width="54dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/uuidParent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nomParent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <TextView
        android:id="@+id/uuidParent"
        android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/arrrowButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nomParent"
        app:layout_constraintTop_toBottomOf="@+id/nomParent" />
</androidx.constraintlayout.widget.ConstraintLayout>